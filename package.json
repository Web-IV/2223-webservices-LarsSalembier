{
  "name": "webservices-chirosite",
  "version": "0.0.1",
  "license": "UNLICENSED",
  "scripts": {
    "start": "npx env-cmd nodemon"
  },
  "nodemonConfig": {
    "signal": "SIGTERM",
    "ignore": [
      "node_modules/*",
      ".vscode/*"
    ],
    "delay": "80",
    "watch": [
      "config",
      "src"
    ],
    "ext": "js,json",
    "legacyWatch": true,
    "exec": "node --inspect=0.0.0.0:9001 --trace-warnings src/index.js"
  },
  "dependencies": {
    "@koa/cors": "^4.0.0",
    "@koa/router": "^12.0.0",
    "config": "^3.3.8",
    "env-cmd": "^10.1.0",
    "knex": "^2.3.0",
    "koa": "^2.13.4",
    "koa-bodyparser": "^4.3.0",
    "mysql2": "^2.3.3",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "nodemon": "^2.0.19"
  }
}
